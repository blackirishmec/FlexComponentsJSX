{
	"compilerOptions": {
	  	"target": "ES2019",
	  	"module": "ESNext",
	  	"lib": ["dom", "dom.iterable", "esnext"],
	  	"moduleResolution": "node",
		"allowJs": true,
	  	"outDir": "dist",
	  	"declaration": true,
	  	"declarationMap": true,
	  	"skipLibCheck": true,
	  	"strict": true,
	  	"jsx": "react",
		"resolveJsonModule": true,
	  	"esModuleInterop": true,
	  	"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}